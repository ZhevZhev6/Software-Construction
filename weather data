import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.net.HttpURLConnection;
import java.net.URL;

public class WeatherApp {

  public static void main(String[] args) throws Exception {
    // Replace "YOUR_API_KEY" with your actual API key
    String apiKey = "YOUR_API_KEY";
    String city = "London"; // Replace with the city you want weather for

    // Construct the API request URL
    String urlString = "https://api.openweathermap.org/data/2.5/weather?q=" + city + "&appid=" + apiKey;

    // Send the request and get the response
    URL url = new URL(urlString);
    HttpURLConnection connection = (HttpURLConnection) url.openConnection();
    connection.setRequestMethod("GET");

    // Process the response and extract weather data (we'll add this later)

    connection.disconnect();
  }
}
